{
    "compilerOptions": {
        "target": "es2020",
        "strict": true,
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "decompiler": ["./packages/decompiler"],
            "decoder": ["./packages/decoder"],
            "utils": ["./packages/utils"],
            "messages": ["./packages/messages"]
        },
        "sourceMap": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
}
